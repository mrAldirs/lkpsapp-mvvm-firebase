<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/it_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/it_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:paddingHorizontal="12dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    <View
            android:id="@+id/it_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue_700"
            android:layout_alignTop="@id/it_number"
            android:layout_alignBottom="@id/it_number"
            android:layout_toEndOf="@+id/it_number"/>

    <TextView
            android:id="@+id/it_criteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criteria"
            android:paddingHorizontal="12dp"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/it_divider"
            android:layout_alignTop="@+id/it_number"
            android:layout_alignBottom="@+id/it_number"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_700"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/it_divider"
            android:layout_below="@id/it_criteria"/>

</RelativeLayout>